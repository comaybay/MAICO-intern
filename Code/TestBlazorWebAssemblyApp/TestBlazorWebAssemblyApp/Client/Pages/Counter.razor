@page "/counter"

<h1>Counter</h1>
<p>The counter value is @count</p>
<button class="btn btn-primary" @onclick=IncreaseCount>Increment counter</button>

@code {
    [Parameter]
    public int IncreasementAmount { get; set; } = 1;

    private int count = 42;

    private void IncreaseCount() => count += IncreasementAmount;
}

